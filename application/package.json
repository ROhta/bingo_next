{
	"name": "bingo_next",
	"version": "0.1.0",
	"private": false,
	"author": "ROhta",
	"description": "A Bingo Machine for Party",
	"license": "GPL-3.0-or-later",
	"homepage": "https://rohta-bingo-next.vercel.app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/ROhta/bingo_next"
	},
	"bugs": {
		"url": "https://github.com/ROhta/bingo_next/security/policy"
	},
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"prepare": "cd .. && husky application/.husky",
		"test": "vitest",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"chromatic": "chromatic --only-changed --project-token=${CHROMATIC_PROJECT_TOKEN}"
	},
	"volta": {
		"node": "22.14.0",
		"pnpm": "10.5.2"
	},
	"packageManager": "pnpm@10.19.0",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{mjs,ts,tsx}": [
			"pnpm exec eslint . --fix",
			"pnpm exec prettier --write ."
		]
	},
	"prettier": {
		"printWidth": 1000,
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"trailingComma": "es5",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"rangeStart": 0,
		"rangeEnd": 10000,
		"filepath": "none",
		"requirePragma": false,
		"insertPragma": false,
		"proseWrap": "never",
		"htmlWhitespaceSensitivity": "ignore",
		"vueIndentScriptAndStyle": true,
		"endOfLine": "auto"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/postcss": "^4.1.15",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"next": "15.5.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/eslintrc": "^3.3.1",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-onboarding": "^9.1.13",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/experimental-nextjs-vite": "8.6.14",
		"@storybook/react": "^9.1.13",
		"@storybook/test": "^8.6.14",
		"@testing-library/react": "^16.3.0",
		"@tsconfig/strictest": "^2.0.6",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.9.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"chromatic": "^13.3.0",
		"eslint": "^9.38.0",
		"eslint-config-next": "15.5.6",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-storybook": "^9.1.13",
		"eslint-plugin-unicorn": "^61.0.2",
		"eslint-plugin-unused-imports": "^4.3.0",
		"husky": "^9.1.7",
		"jsdom": "^27.0.1",
		"lint-staged": "^16.2.5",
		"playwright": "^1.56.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"storybook": "^9.1.13",
		"tailwindcss": "^4.1.15",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@vercel/speed-insights",
			"esbuild",
			"sharp"
		],
		"ignoredBuiltDependencies": [
			"msw"
		]
	}
}
